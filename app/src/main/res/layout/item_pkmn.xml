<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/labelPkmnName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"
        android:text="Nombre"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/btnErasePkmn"
        />
    <TextView
        android:id="@+id/labelPkmnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text="ID: "
        android:textStyle="bold"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/labelPkmnName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@id/spritePkmn"
        />
    <TextView
        android:id="@+id/tvPkmnId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@id/labelPkmnName"
        app:layout_constraintLeft_toRightOf="@+id/labelPkmnId"

        />
    <Button
        android:id="@+id/btnErasePkmn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ayos popo!"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="@id/spritePkmn"
        app:layout_constraintRight_toRightOf="@id/spritePkmn"
        app:layout_constraintTop_toBottomOf="@id/spritePkmn"
        />

    <ImageView
        android:id="@+id/spritePkmn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPkmnId"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/labelHp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="HP: "
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPkmnId"
        app:layout_constraintLeft_toRightOf="@id/spritePkmn"
        />
    <TextView
        android:id="@+id/labelPkmnAtk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="Atk: "
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/labelHp"
        app:layout_constraintLeft_toRightOf="@id/spritePkmn"
        />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/labelPkmnAtkSpc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="Atk Spc: "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPkmnAtk"
        app:layout_constraintLeft_toRightOf="@id/spritePkmn"
        />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/labelPkmnDef"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="Def: "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPkmnAtkSpc"
        app:layout_constraintLeft_toRightOf="@id/spritePkmn"
        />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/labelPkmnDefSpc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="Def Spc: "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPkmnDef"
        app:layout_constraintLeft_toRightOf="@id/spritePkmn"
        />
    <TextView
        android:textColor="@color/black"
        android:id="@+id/labelPkmnSpd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        android:textStyle="bold"
        android:text="Spd: "
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPkmnDefSpc"
        app:layout_constraintLeft_toRightOf="@id/spritePkmn"
        />
    <TextView
        android:id="@+id/tvPkmnHP"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/labelPkmnId"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvPkmnAtk"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPkmnHP"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvPkmnAtkSpc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPkmnAtk"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvPkmnDef"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPkmnAtkSpc"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvPkmnDefSpc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPkmnDef"
        app:layout_constraintRight_toRightOf="parent"
        />
    <TextView
        android:id="@+id/tvPkmnSpd"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:text=""
        android:textSize="20dp"
        app:layout_constraintTop_toBottomOf="@+id/tvPkmnDefSpc"
        app:layout_constraintRight_toRightOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>